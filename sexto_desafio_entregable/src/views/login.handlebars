<form class="loginForm" action="/api/sessions/login" method="POST">
  <h2>Inicia Sesión</h2>
  <label for="email">Email:</label>
  <input type="email" name="email" required />
  <label for="password">Contraseña:</label>
  <input type="password" name="password" required />
  <button class="submitButton" type="submit">Ingresar</button>
  <div class="gitHubDiv">
    <a class="gitHub" href="/api/sessions/github">Inicia sesión con
      <img
        class="imgGitHub"
        src="https://cdn-icons-png.flaticon.com/512/25/25231.png"
        alt=""
      /></a>
  </div>
  <a class="registro" href="/register">Registrarse</a>

</form>